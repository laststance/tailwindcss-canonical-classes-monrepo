{
  "name": "@laststance/tailwind-suggest-canonical-classes",
  "version": "0.1.0",
  "description": "CLI that converts non-canonical Tailwind CSS v4 classes to their canonical equivalents",
  "type": "module",
  "bin": {
    "tailwind-suggest-canonical-classes": "bin/tailwind-suggest-canonical.js"
  },
  "main": "dist/cli.js",
  "files": [
    "bin",
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "tailwindcss",
    "tailwind",
    "canonical",
    "suggest-canonical-classes",
    "lint",
    "formatter",
    "cli",
    "codemod"
  ],
  "author": "Laststance.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laststance/tailwindcss-canonical-classes-monrepo.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/laststance/tailwindcss-canonical-classes-monrepo/tree/main/packages/cli#readme",
  "bugs": {
    "url": "https://github.com/laststance/tailwindcss-canonical-classes-monrepo/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@laststance/tailwindcss-canonical-core": "workspace:*",
    "minimist": "^1.2.8",
    "tinyglobby": "^0.2.12"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.17.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  }
}
